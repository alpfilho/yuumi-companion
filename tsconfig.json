{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "diont": ["./types/diont"]
    },
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["src/**/*", "app.d.ts", "diont.d.ts"],
  "exclude": ["./types/**"]
}
